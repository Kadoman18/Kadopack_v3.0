{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "minecraft:enchanting_table_particle",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/enchanting_table_particles"
			}
		},

		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 1
			},

			"minecraft:emitter_lifetime_once": {},
			"minecraft:emitter_shape_point": {},

			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "m.random(0.5, 2.5)"
			},

			"minecraft:particle_motion_parametric": {
				"relative_position": [
					"v.pos = 1 - (v.particle_age / v.particle_lifetime); return v.direction.x * v.pos;",
					"v.direction.y * v.pos - m.pow((1 - v.pos), 3) * 1.2",
					"v.direction.z * v.pos"
				]
			},

			"minecraft:particle_appearance_billboard": {
				"size": [
					"v.particle_random_1 * 0.05 + 0.02",
					"v.particle_random_1 * 0.05 + 0.02"
				],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"uv": [
						"v.particle_random_3 < 0.5 ? m.round(v.particle_random_2 * 14) * 8 + 8 : m.round(v.particle_random_2 * 10) * 8",
						"v.particle_random_3 < 0.5 ? 112 : 120"
					],
					"uv_size": [8, 8]
				}
			},

			"minecraft:particle_appearance_tinting": {
				"color": [
					"v.particle_random_3 * 0.54 + 0.36",
					"v.particle_random_3 * 0.54 + 0.36",
					"v.particle_random_3 * 0.6 + 0.4"
				]
			}
		}
	}
}
