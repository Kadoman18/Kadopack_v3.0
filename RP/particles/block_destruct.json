{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "minecraft:block_destruct",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "atlas.terrain"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": "v.emitter_intensity * v.emitter_intensity * (v.emitter_intensity)"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0
			},
			"minecraft:emitter_shape_point": {
				"offset": [
					"Math.random(-v.emitter_radius, v.emitter_radius)",
					"Math.random(-v.emitter_radius, v.emitter_radius)",
					"Math.random(-v.emitter_radius, v.emitter_radius)"
				],
				"direction": ["Math.random(-1,1)", 1, "Math.random(-1, 1)"]
			},
			"minecraft:particle_initial_speed": "Math.random(0, 5) * v.velocity_scalar",
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "0.167f / (Math.random(0.0, 2.5) * 0.9f + 0.1f)"
			},
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0.0, -13.0, 0.0],
				"linear_drag_coefficient": 0.52
			},
			"minecraft:particle_motion_collision": {
				"coefficient_of_restitution": 0.37,
				"collision_drag": 5,
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_billboard": {
				"size": [
					"v.particle_random_1 * 0.035 + 0.012",
					"v.particle_random_1 * 0.035 + 0.012"
				],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 1,
					"texture_height": 1,
					"uv": [
						"v.emitter_texture_coordinate.u + (v.emitter_texture_size.u/4) * (v.particle_random_1*3)",
						"v.emitter_texture_coordinate.v + (v.emitter_texture_size.v/4) * (v.particle_random_2*3)"
					],
					"uv_size": [
						"v.emitter_texture_size.u/4",
						"v.emitter_texture_size.v/4"
					]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": ["v.color.r", "v.color.g", "v.color.b", "v.color.a"]
			},
			"minecraft:particle_appearance_lighting": {}
		}
	}
}
