{
	"format_version": "1.21.20",
	"minecraft:block": {
		"description": {
			"identifier": "kado:yellow_sheep_head",
			"menu_category": {
				"category": "items",
				"group": "itemGroup.name.skull"
			},
			"traits": {
				"minecraft:placement_position": {
					"enabled_states": ["minecraft:block_face"]
				}
			},
			"states": { "kado:rotation": { "values": { "min": 0, "max": 15 } } }
		},
		"components": {
			"minecraft:material_instances": {
				"*": {
					"texture": "yellow_sheep_head",
					"render_method": "alpha_test"
				}
			},
			"minecraft:collision_box": {
				"origin": [-4, 0, -4],
				"size": [8, 8, 8]
			},
			"minecraft:selection_box": {
				"origin": [-4, 0, -4],
				"size": [8, 8, 8]
			},
			"minecraft:geometry": {
				"identifier": "geometry.mini_block",
				"bone_visibility": {
					"up_0": "q.block_state('minecraft:block_face') == 'up' && !math.mod(q.block_state('kado:rotation'), 4)",
					"up_22_5": "q.block_state('minecraft:block_face') == 'up' && !math.mod(q.block_state('kado:rotation') - 1, 4)",
					"up_45": "q.block_state('minecraft:block_face') == 'up' && !math.mod(q.block_state('kado:rotation') - 2, 4)",
					"up_67_5": "q.block_state('minecraft:block_face') == 'up' && !math.mod(q.block_state('kado:rotation') - 3, 4)",
					"side": "q.block_state('minecraft:block_face') != 'up'"
				}
			},
			"minecraft:placement_filter": {
				"conditions": [{ "allowed_faces": ["up", "side"] }]
			},
			"minecraft:custom_components": ["kado:mini_block_rotation"]
		},
		"permutations": [
			{
				"condition": "q.block_state('kado:rotation') >= 4 || q.block_state('minecraft:block_face') == 'east'",
				"components": {
					"minecraft:transformation": { "rotation": [0, -90, 0] }
				}
			},
			{
				"condition": "q.block_state('kado:rotation') >= 8 || q.block_state('minecraft:block_face') == 'south'",
				"components": {
					"minecraft:transformation": { "rotation": [0, 180, 0] }
				}
			},
			{
				"condition": "q.block_state('kado:rotation') >= 12 || q.block_state('minecraft:block_face') == 'west'",
				"components": {
					"minecraft:transformation": { "rotation": [0, 90, 0] }
				}
			},
			{
				"condition": "q.block_state('minecraft:block_face') != 'up'",
				"components": {
					"minecraft:collision_box": {
						"origin": [-4, 4, 0],
						"size": [8, 8, 8]
					},
					"minecraft:selection_box": {
						"origin": [-4, 4, 0],
						"size": [8, 8, 8]
					}
				}
			}
		]
	}
}
